<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.dueday.maya.CreateProject">

    <EditText
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/tagSelect"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:text="Start"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagSelect" />

    <EditText
        android:id="@+id/eventStartDate"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Date"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/tagSelect" />

    <EditText
        android:id="@+id/eventStartTime"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:inputType="time"
        android:hint="Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eventStartDate"
        app:layout_constraintTop_toBottomOf="@+id/tagSelect" />

    <ImageButton
        android:id="@+id/invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_person_add_white_24dp"
        app:layout_constraintTop_toBottomOf="@+id/eventStartTime"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_createProject"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="CREATE"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</android.support.constraint.ConstraintLayout>
